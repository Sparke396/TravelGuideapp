<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewTourActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_margin="8sp"
        android:padding="8sp"
        android:text="Add new Site"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:background="#6E260E"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Select Site image from gallery : "
            android:textColor="#6E260E" />
        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_gravity="center"
            android:layout_marginTop="8sp"
            android:onClick="openGallery"
            android:id="@+id/siteImageView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:maxLines="1"
            android:text="Enter site name : "
            android:textColor="#6E260E" />

        <EditText
            android:id="@+id/siteNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E260E"
            android:textColor="#0C327E"
            android:textColorHint="#7A0C327E" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:maxLines="1"
            android:text="Site City : "
            android:textColor="#6E260E" />

        <EditText
            android:id="@+id/cityEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E260E"
            android:textColor="#0C327E"
            android:textColorHint="#7A0C327E" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:maxLines="1"
            android:text="Best season to visit site ?"
            android:textColor="#6E260E" />

        <EditText
            android:id="@+id/seasonEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E260E"
            android:textColor="#0C327E"
            android:textColorHint="#7A0C327E" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:maxLines="1"
            android:text="Write about Site : "
            android:textColor="#6E260E" />

        <EditText
            android:id="@+id/descEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E260E"
            android:textColor="#0C327E"
            android:textColorHint="#7A0C327E" />
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:background="@drawable/solid_background"
            android:text="Save Site"
            android:textColor="#FFF" />

    </LinearLayout>
</LinearLayout>